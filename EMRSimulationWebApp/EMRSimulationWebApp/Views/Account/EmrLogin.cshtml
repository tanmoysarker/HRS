@{
    ViewData["Title"] = "FedUni - Emr Simulation";
    Layout = "~/Views/Shared/_LoginLayout.cshtml";
}

<div class="login-container">


    <div class="login-box">
        <h3>Welcome to Fed Uni EMR Simulator</h3>
        <br />
        <form>
            <div class="row mb-1">
                <div class="col-sm-5"></div>
                <div class="col-sm-7">
                    <br />
                </div>
            </div>
            <div class="row mb-1">
                <div class="col-sm-8 offset-3">
                    <button type="button" id="loginStudent" class="btn btn-primary" style="background-color:#FF8A30;width:70%;height: 150%;">LOGIN AS A STUDENT</button>
                </div>

                <div class="row mb-1">
                    <div class="col-sm-5"></div>
                    <div class="col-sm-7">
                        <br />
                    </div>
                </div>
            </div>
            <div class="row mb-1">
                <div class="col-sm-5"></div>
                <div class="col-sm-7">
                    &nbsp;&nbsp;&nbsp;OR
                </div>
            </div>
            <div class="row mb-1">
                <div class="col-sm-5"></div>
                <div class="col-sm-7">
                    <br />
                </div>
            </div>
            <div class="row mb-1">
                <div class="col-sm-8 offset-3">
                    <button type="button" id="loginSupervisor" class="btn btn-primary" style="color:black;background-color:#EDEBE8;width:70%;height: 150%;">LOGIN AS A SUPERVISOR</button>
                </div>
            </div>
        </form>
    </div>

    <footer>
        <p>© 2024, Federation University - Version 0.0.0</p>
    </footer>
</div>

<script>

    $(document).ready(function () {

        $('#loginStudent').on('click', function (event) {
            window.location.href = "/account/login?login=student";
        });

        $('#loginSupervisor').on('click', function (event) {
            window.location.href = "/account/login?login=supervisor";
        });

        // $('#loginSupervisor').on('click', function (event) {
        //     window.location.href = "/account/supervisorlogin";
        // });
    });

</script>